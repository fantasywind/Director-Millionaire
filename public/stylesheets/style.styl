html, body
  height 100%
#container
  margin 0 auto
  max-width 980px
  height 100%
#screen
  background-color #CCC
  width 90%
  margin 0 5%
  height 470px
  padding 15px
  position relative
  text-align center
#main
  width 100%
  height 100%
#source-list
  padding 12px
  width 100%
.source
  width 240px
  height 180px
  &.active
    ~ .on-live
      display block
#source-preview
  width 100%
  height 100%
#source-preview-container
  width 100%
  height 100%
#create-desktop
  padding 6pt 30pt
  border 1px solid #2980b9
  background-color #3498db
  color #FAFAFA
  font-size 12.5pt
  cursor pointer
  &:hover
    background-color darken(#3498db, 20%)
.on-live
  display none
  position absolute
  right 5px
  top -11px
  font-size 12pt
  font-weight bold
  background-color rgba(255, 255, 255, 0.8)
  padding 3px 5px
  border 1px solid #555
  .red-dot
    color #e74c3c
#source-links, #viewer-links
  margin-bottom 24pt
.source-container
  display inline-block
  margin 0 18px
  position relative
.source-link, .viewer-link
  padding 6pt 10pt
  border 1px solid #2c3e50
  background-color #34495e
  color #FAFAFA
  font-size 11.5pt
  cursor pointer
  &:hover
    background-color darken(#34495e, 20%)
.viewer-link
  border-color #16a085
  background-color #1abc9c
  &:hover
    background-color darken(#1abc9c, 20%)
#viewer-container
  position relative
  background-color #E7E7E7
#timer-container
  position absolute
  top 18px
  right -26px
  color #FAFAFA
  text-shadow 5px 5px 0 #3e3e3e
  font-size 72pt
#overlay-container
  position absolute
  bottom 18px
  left 140px
  width 700px
  padding 10px
  background-color #EFEFEF
  border 2px solid #555
  box-shadow 2px 2px 10px #777
  .question
    background-color #404a50
    padding 6px 24px
    h3
      color #FAFAFA
      font-weight normal
      margin 14px 0
    .helper
      color #CCC
      margin-top 8px
      font-family sans-serif
  .answers
    display block
    padding 10px 0 0 0
    margin 0
    &:first-child
      padding-bottom 0
    .option-mark, .answer
      display inline-block
    .answer
      position relative
      padding-left 52px
      background-color #99BFBF
      width 293px
      color #222
      font-size 15pt
      &:first-child
        margin-right 10px
    .option-mark
      position absolute
      left 16px
      top 9px
      font-size 22pt
      color #E57040
    .option
      margin 13px 0
    .helper
      color #BCEBEB
      margin 8px 0 12px 0